              i.fa-solid.fa-angle-down
          .select__body 
            .select__item Бизнес
            .select__item Маркетинг
            .select__item Финансы

        .create-idea__select.select 
          .select__header 
            span.select__current Категория
            .select__icon 
              i.fa-solid.fa-angle-down
          .select__body 
            .select__item Бизнес
            .select__item Маркетинг
            .select__item Финансы

    textarea.create-idea__textarea(name="", cols="30", rows="10" placeholder="Опишите вашу идею")

    .create-idea__subtitle Создайте до 5 критериев оценки вашей идеи

    .create-idea__add-criteria
      .create-idea__criteria-block
        .create-idea__criteria.select Востребованность
